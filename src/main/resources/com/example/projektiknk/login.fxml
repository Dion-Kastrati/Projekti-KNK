               <font>
                  <Font name="Arial" size="13.0" />
               </font>
            </Button>
            <Label fx:id="notmember_label" layoutX="400.0" layoutY="348.0" text="Not a member?">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="cancelID" layoutX="565.0" layoutY="292.0" mnemonicParsing="false" onAction="#onActionCancel" prefHeight="36.0" prefWidth="112.0" style="-fx-background-color: #000000;" text="Cancel" textAlignment="CENTER" textFill="#ffd100">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
            <AnchorPane layoutX="-2.0" layoutY="-2.0" prefHeight="400.0" prefWidth="251.0">
               <children>
                  <ImageView fitHeight="507.0" fitWidth="325.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/buss1.jpg" />
                     </image>
                  </ImageView>
                  <Text fill="#ffd100" layoutX="128.0" layoutY="69.0" strokeType="OUTSIDE" strokeWidth="0.0" text="eBus">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Text>
               </children>
            </AnchorPane>
            <Text fx:id="or_label" layoutX="559.0" layoutY="363.0" strokeType="OUTSIDE" strokeWidth="0.0" text="or" />
            <Button fx:id="guest_ID" layoutX="565.0" layoutY="345.0" mnemonicParsing="false" onAction="#onActionGuest" prefHeight="26.0" prefWidth="126.0" style="-fx-background-color: transparent;" text="Continue as Guest" textAlignment="CENTER" textFill="#4000ef" underline="true">
               <font>
                  <Font name="Arial" size="13.0" />
               </font>
            </Button>
            <Button fx:id="shqip_ID" layoutX="465.0" layoutY="410.0" mnemonicParsing="false" onAction="#sqClick" text="Albanian" />
            <Button fx:id="english_ID" layoutX="594.0" layoutY="410.0" mnemonicParsing="false" onAction="#enClick" text="English" />
         </children>
      </Pane>
   </center>
